<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="sync"
        android:entries="@array/settings_update_titles"
        android:entryValues="@array/settings_update_values"
        android:key="update"
        android:summary="%s"
        android:title="@string/settings_update_title" />

    <PreferenceCategory android:title="@string/settings_debug">

        <SwitchPreference
            android:defaultValue="false"
            android:key="debug"
            android:summary="@string/settings_debug_summary"
            android:title="@string/settings_debug_title" />

    </PreferenceCategory>

</PreferenceScreen>
